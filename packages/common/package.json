{
  "name": "compx_common",
  "version": "1.0.0",
  "description": "Common directory for CompX",
  "main": "dist/index.ts",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "directory": "src"
  },
  "scripts": {
    "prebuild": "npx rimraf dist",
    "build": "npx tsc",
    "postbuild": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "test": "((npx jest --config='__tests__/jest.config.ts' --ci --runInBand --bail --colors --detectOpenHandles --silent --forceExit --coverage --errorOnDeprecated 2>&1) && echo 'PASS') || echo 'FAIL'"
  },
  "dependencies": {
    "loglevel": "^1.8.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.0",
    "@types/uuid": "^8.3.3",
    "copyfiles": "^2.4.1"
  }
}
