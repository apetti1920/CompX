{
  "name": "@compx/electron_app",
  "version": "1.0.0",
  "description": "Electron",
  "main": "./dist/main/index.js",
  "scripts": {
    "build:loader": "pushd ../electron_loader && npm run build && cp -R dist ../electron_app/dist/renderer/loader && popd",
    "build:app": "pushd ../web_app && npm run build && cp -R dist ../electron_app/dist/renderer/app && popd",
    "build:deps": "npm run build:loader && npm run build:app",
    "prebuild": "rimraf dist && mkdir -p dist/renderer",
    "build": "npm run build:deps && tsc",
    "start": "npm run build && electron .",
    "builder": "electron-builder",
    "postbuilder": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.inflow.compx",
    "productName": "CompX",
    "nsis": {
      "artifactName": "CompX.setup.${version}.${ext}",
      "uninstallDisplayName": "CompX"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron": "^19.0.10",
    "electron-builder": "^23.3.3"
  },
  "dependencies": {
    "@compx/common": "1.0.0",
    "@types/tmp": "^0.2.3",
    "loglevel": "^1.8.0",
    "tmp": "^0.2.1",
    "uuid": "^8.3.2"
  }
}
