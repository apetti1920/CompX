pipeline {
    agent any

    stages {
        stage('Common Pipeline') {
            when {
                allOf {
                    expression { env.BRANCH_NAME ==~ /trunc-\w+-\d+/ }
                    changeset "packages/common/src/**/*.*"
                }
            }
            stages {
                stage ("Test Common") {
                    steps {
                        sh 'cd packages/common'
                        sh 'docker build -t common_test -f __tests__/Dockerfile .'
                        sh 'docker run common_test'
                    }
                }
            }
        }
    }
}