pipeline {
    agent any

    stages {
        stage('Initialize Folder Image') {
            steps {
                sh 'docker build -t base_node_folder -f base.dockerfile .'
            }
        }
        stage('Common Pipeline') {
            when {
                allOf {
                    expression { env.BRANCH_NAME ==~ /trunc-\w+-\d+/ }
//                     changeset "packages/common/src/**/*.*"
                }
            }
            stages {
                stage ("Test Common") {
                    steps {
                        echo "Starting Tests"
//                         sh 'docker build -t common_test -f packages/common/__tests__/test.common.dockerfile .'
//                         sh 'docker run common_test'
                        echo "Finished Tests"
                    }
                }
            }
        }
    }
}