pipeline {
    agent any

    stages {
        stage('Common Pipeline') {
            when {
                allOf {
                    expression { env.BRANCH_NAME ==~ /trunc-\w+-\d+/ }
                    changeset "packages/common/src/**/*.*"
                }
            }
            stages {
                stage ("Test Common") {
                    steps {
                        cd packages/common
                        docker build -t common_test -f __tests__/Dockerfile .
                        docker run common_test
                    }
                }
            }
        }
    }
}